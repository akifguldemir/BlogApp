@model List<Post>
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Posts</h5>
        </div>
        <div class="card-body">
            @foreach(var post in Model)
            {
                <div class="mb-2">
                    <a href="/posts/details/@post.Url"><h6 class="mb-0">@post.Title</h6></a>
                </div>
            }

        </div>
    </div>