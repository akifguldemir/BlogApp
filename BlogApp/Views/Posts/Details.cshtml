@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.Title</h1>
            <div class="tags">
                @foreach(var tag in Model.Tags)
                {
                    <a href="/posts/tag/@tag.Url" class="badge bg-@tag.Colors bg-opacity-10 text-danger mb-2 fw-bold">@tag.Text</a>
                }
            </div>
            <div class="tags">
                <a href="" class="badge bg-primary bg-opacity-10 text-danger mb-2 fw-bold">Web Development</a>
                <a href="" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Php</a>
            </div>
            <img src="~/img/@Model.Image" class="img-fluid rounded" alt="">
            <div>
                @Model.Content
            </div>
        </div>
    </div>
</div>


